#!/bin/bash
clear
# +-*/ ** variable++  variable--  --variable  ++variable
# == igualdad		!= desigualdad
valor1 = 10
valor2 = 20

resultado = `expr $valor1+$valor2Â´
echo resultado $resultado

#Otra forma de ponerlo
